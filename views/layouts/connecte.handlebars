<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>RemindR</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header class="header navbar navbar-expand-lg">
        <a class="navbar-RemindR" href="/dashboard">RemindR</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link dash" href="/dashboard">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link connect" href="/deconnexion">Déconnexion</a>
                </li>
                {{#if username}}
                <li class="nav-item">
                    <a class="nav-link">{{username}}</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </header>

    {{{body}}}

    <footer>
        <p>&copy; 2023 Remindr. Tous droits réservés.</p>
    </footer>


    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        var quill = new Quill('#editor', {
        theme: 'snow'
        });

        var form = document.querySelector('.add-rappel-container');
        form.onsubmit = function(e) {
        var description = document.querySelector('input[name=description]');
        description.value = quill.root.innerHTML;
        };
    });

    const colorBlocks = document.querySelectorAll('#colorPicker .color-block');
    const hiddenInput = document.getElementById('couleur');

    colorBlocks.forEach(block => {
        block.addEventListener('click', function () {
        const selectedColor = this.getAttribute('data-color');
        hiddenInput.value = selectedColor;

        // Enlever la classe 'selected' de tous les blocs
        colorBlocks.forEach(b => b.classList.remove('selected'));

        // Ajouter la classe 'selected' au bloc actuellement cliqué
        this.classList.add('selected');
        });
    });
    </script>
</body>

</html>